<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administrador"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#2196F3"
            android:layout_marginBottom="16dp"/>

        <!-- Botones de navegación principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btn_ir_gestion_sensores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensores"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_ir_gestion_usuarios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="Usuarios"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_ir_estado_barrera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Barrera"
                android:backgroundTint="#009688"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Botón para ir a historial completo -->
        <Button
            android:id="@+id/btn_ir_historial_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#3F51B5"
            android:text="VER HISTORIAL COMPLETO"
            android:textColor="#FFFFFF" />

        <!-- Botón para cargar historial -->
        <Button
            android:id="@+id/btn_cargar_historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2196F3"
            android:text="ACTUALIZAR HISTORIAL"
            android:textColor="#FFFFFF" />

        <!-- ListView para mostrar eventos -->
        <ListView
            android:id="@+id/listViewEventos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:dividerHeight="1dp"
            android:layout_marginBottom="16dp" />

        <!-- Sensores -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensores"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <Spinner
            android:id="@+id/spinner_sensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btn_activar_sensor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activar"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btn_desactivar_sensor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desactivar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Usuarios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <Spinner
            android:id="@+id/spinner_usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btn_activar_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activar"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btn_desactivar_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Desactivar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Barrera manual -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control Barrera"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btn_abrir_barrera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abrir"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btn_cerrar_barrera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cerrar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
